<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <!-- 로그인 화면 -->
    <ScrollView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F9FA"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="24dp">

        <!-- 헤더 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="30dp">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/ic_1q_moa"/>

        </LinearLayout>

        <!-- 입력 폼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:elevation="8dp">

            <!-- 아이디 입력 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxStrokeColor="@drawable/outline_color_selector"
                app:hintTextColor="@drawable/outline_color_selector"
                app:boxStrokeWidth="1dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_userid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="아이디"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:fontFamily="@font/hana2_regular"
                    android:padding="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- 비밀번호 입력 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:boxStrokeColor="@drawable/outline_color_selector"
                app:hintTextColor="@drawable/outline_color_selector"
                app:passwordToggleTint="#00B2A6"
                app:boxStrokeWidth="1dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusBottomEnd="12dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="비밀번호"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:fontFamily="@font/hana2_regular"
                    android:padding="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- 로그인 버튼 -->
            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="로그인"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_primary_button"
                android:fontFamily="@font/hana2_medium"
                android:layout_marginBottom="24dp"
                android:elevation="4dp" />

            <!-- 회원가입으로 이동 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="계정이 없으신가요? "
                    android:textSize="15sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/hana2_regular" />

                <TextView
                    android:id="@+id/tv_signup_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="회원가입"
                    android:textSize="15sp"
                    android:textColor="#00B2A6"
                    android:fontFamily="@font/hana2_medium"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 하단 여백 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp" />

    </LinearLayout>

    </ScrollView>

    <!-- 프래그먼트 컨테이너 -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>