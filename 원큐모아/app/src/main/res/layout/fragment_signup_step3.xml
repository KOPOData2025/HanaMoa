<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- 상단 헤더 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:gravity="center_vertical"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_left_chevron"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="회원가입"
            android:textSize="17sp"
            android:textColor="#333333"
            android:fontFamily="@font/hana2_medium"
            android:gravity="center" />

        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>

    <!-- 진행바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:background="@android:color/white">

        <!-- 1단계 -->
        <View
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="@drawable/bg_progress_selected"
            android:layout_marginEnd="4dp" />

        <!-- 2단계 -->
        <View
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="@drawable/bg_progress_selected"
            android:layout_marginEnd="4dp" />

        <!-- 3단계 -->
        <View
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="@drawable/bg_progress_selected"
            android:layout_marginEnd="4dp" />

        <!-- 4단계 -->
        <View
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_weight="1"
            android:background="@drawable/bg_progress_unselected" />

    </LinearLayout>

    <!-- 제목 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계좌를 선택해주세요"
        android:textSize="16sp"
        android:textColor="#333333"
        android:fontFamily="@font/hana2_medium"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="32dp" />

    <!-- 계좌 목록 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 계좌 카드 1 -->
            <LinearLayout
                android:id="@+id/account_card_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_friend_search"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_small_logo"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="하나은행 입출금통장"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:fontFamily="@font/hana2_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123-456-789012"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:fontFamily="@font/hana2_regular"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_new_badge_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="신규"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/hana2_medium"
                    android:background="@drawable/bg_confirm_dialog_button"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:visibility="visible" />

            </LinearLayout>

            <!-- 계좌 카드 2 -->
            <LinearLayout
                android:id="@+id/account_card_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_friend_search"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_small_logo"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="하나은행 적금통장"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:fontFamily="@font/hana2_medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="987-654-321098"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:fontFamily="@font/hana2_regular"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_new_badge_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="신규"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/hana2_medium"
                    android:background="@drawable/bg_confirm_dialog_button"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- 다음 단계 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:layout_marginBottom="40dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="다음"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/hana2_medium"
            android:background="@drawable/bg_button_disabled"
            android:gravity="center"
            android:clickable="true"
            android:enabled="false"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout>
