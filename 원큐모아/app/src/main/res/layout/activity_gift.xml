<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA">

    <!-- 상단 헤더 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:background="@android:color/white">

        <View
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <!-- 제목 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="선물"
            android:textSize="18sp"
            android:textColor="#333333"
            android:fontFamily="@font/hana2_medium"
            android:gravity="center" />

        <!-- 빈 공간 -->
        <View
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </LinearLayout>

    <!-- 메인 콘텐츠 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textSize="32sp"
            android:textColor="#333333"
            android:fontFamily="@font/hana2_bold" />

    </LinearLayout>

    <!-- 네비게이션바 (고정) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_navigation"
        android:padding="16dp"
        android:paddingBottom="20dp"
        android:elevation="8dp"
        android:fitsSystemWindows="false">

        <!-- 홈 -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_nav_home"
                android:contentDescription="홈"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홈"
                android:textColor="#666666"
                android:textSize="10sp"
                android:fontFamily="@font/hana2_regular" />

        </LinearLayout>

        <!-- 투자 -->
        <LinearLayout
            android:id="@+id/nav_invest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_nav_invest"
                android:contentDescription="투자"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="투자"
                android:textColor="#666666"
                android:textSize="10sp"
                android:fontFamily="@font/hana2_regular" />

        </LinearLayout>

        <!-- 선물 -->
        <LinearLayout
            android:id="@+id/nav_gift"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_nav_gift_selected"
                android:contentDescription="선물"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선물"
                android:textColor="#009591"
                android:textSize="10sp"
                android:fontFamily="@font/hana2_regular" />

        </LinearLayout>

        <!-- 교환 -->
        <LinearLayout
            android:id="@+id/nav_exchange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_nav_exchange"
                android:contentDescription="교환"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="교환"
                android:textColor="#666666"
                android:textSize="10sp"
                android:fontFamily="@font/hana2_regular" />

        </LinearLayout>

        <!-- 메뉴 -->
        <LinearLayout
            android:id="@+id/nav_menu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_nav_menu"
                android:contentDescription="메뉴"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메뉴"
                android:textColor="#666666"
                android:textSize="10sp"
                android:fontFamily="@font/hana2_regular" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
