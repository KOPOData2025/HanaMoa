<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_dialog">

    <!-- 제목 -->
    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="구매"
        android:textSize="20sp"
        android:textColor="#333333"
        android:fontFamily="@font/hana2_bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- 자산 정보 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/iv_dialog_asset"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_market_gold"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/tv_dialog_asset_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GOLD"
            android:textSize="18sp"
            android:textColor="#333333"
            android:fontFamily="@font/hana2_medium" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_dialog_current_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123,456원"
            android:textSize="16sp"
            android:textColor="#666666"
            android:fontFamily="@font/hana2_regular" />

    </LinearLayout>

    <!-- 수량 입력 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수량"
                android:textSize="14sp"
                android:textColor="#666666"
                android:fontFamily="@font/hana2_medium" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_holding_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보유: 0g"
                android:textSize="12sp"
                android:textColor="#999999"
                android:fontFamily="@font/hana2_regular"
                android:visibility="gone" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_quantity"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="수량을 입력하세요"
            android:textSize="16sp"
            android:textColor="#333333"
            android:fontFamily="@font/hana2_regular"
            android:background="@drawable/bg_edittext"
            android:paddingHorizontal="16dp"
            android:inputType="numberDecimal"
            android:gravity="center_vertical" />

    </LinearLayout>

    <!-- 가격 입력 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가격"
            android:textSize="14sp"
            android:textColor="#666666"
            android:fontFamily="@font/hana2_medium"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/et_price"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="가격을 입력하세요"
            android:textSize="16sp"
            android:textColor="#333333"
            android:fontFamily="@font/hana2_regular"
            android:background="@drawable/bg_edittext"
            android:paddingHorizontal="16dp"
            android:inputType="numberDecimal"
            android:gravity="center_vertical" />

    </LinearLayout>

    <!-- 총 금액 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 금액"
            android:textSize="16sp"
            android:textColor="#333333"
            android:fontFamily="@font/hana2_medium" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0원"
            android:textSize="18sp"
            android:textColor="#333333"
            android:fontFamily="@font/hana2_bold" />

    </LinearLayout>

    <!-- 버튼들 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="취소"
            android:textSize="16sp"
            android:textColor="#666666"
            android:fontFamily="@font/hana2_medium"
            android:background="@drawable/bg_cancel_dialog_button"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="확인"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/hana2_medium"
            android:background="@drawable/bg_confirm_dialog_button2"
            android:gravity="center"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout>
