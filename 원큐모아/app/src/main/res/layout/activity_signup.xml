<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- 헤더 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="40dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_logo_white"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="하나모아"
                android:textSize="28sp"
                android:textColor="#2D3541"
                android:fontFamily="@font/hana2_bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textSize="18sp"
                android:textColor="#666666"
                android:fontFamily="@font/hana2_medium" />

        </LinearLayout>

        <!-- 입력 폼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_white_rounded"
            android:padding="24dp"
            android:elevation="4dp">

            <!-- 이름 입력 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="#03856E"
                app:hintTextColor="#03856E"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="이름"
                    android:inputType="textPersonName"
                    android:textSize="16sp"
                    android:fontFamily="@font/hana2_regular" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- 전화번호 입력 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="#03856E"
                app:hintTextColor="#03856E"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="전화번호 (010-1234-5678)"
                    android:inputType="phone"
                    android:textSize="16sp"
                    android:fontFamily="@font/hana2_regular" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- 비밀번호 입력 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="#03856E"
                app:hintTextColor="#03856E"
                app:passwordToggleEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="비밀번호 (8자 이상)"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:fontFamily="@font/hana2_regular" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- 비밀번호 확인 -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:boxStrokeColor="#03856E"
                app:hintTextColor="#03856E"
                app:passwordToggleEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_password_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="비밀번호 확인"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:fontFamily="@font/hana2_regular" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- 회원가입 버튼 -->
            <Button
                android:id="@+id/btn_signup"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="회원가입"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_primary_button"
                android:fontFamily="@font/hana2_medium"
                android:layout_marginBottom="16dp" />

            <!-- 로그인으로 이동 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이미 계정이 있으신가요? "
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/hana2_regular" />

                <TextView
                    android:id="@+id/tv_login_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그인"
                    android:textSize="14sp"
                    android:textColor="#03856E"
                    android:fontFamily="@font/hana2_medium"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>