<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="@drawable/bg_dialog"
    android:gravity="center">

    <!-- 성공 아이콘 -->
    <ImageView
        android:id="@+id/iv_success_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_check"
        android:layout_marginBottom="24dp" />

    <!-- 성공 메시지 -->
    <TextView
        android:id="@+id/tv_success_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신청 완료"
        android:textSize="20sp"
        android:textColor="#333333"
        android:fontFamily="@font/hana2_bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- 상세 메시지 -->
    <TextView
        android:id="@+id/tv_success_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="교환 신청이 완료되었습니다.\n\n신청 내역은 마이페이지에서\n확인하실 수 있습니다."
        android:textSize="15sp"
        android:textColor="#666666"
        android:fontFamily="@font/hana2_regular"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="32dp" />

    <!-- 확인 버튼 -->
    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:text="확인"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/hana2_medium"
        android:background="@drawable/bg_confirm_dialog_button"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>
