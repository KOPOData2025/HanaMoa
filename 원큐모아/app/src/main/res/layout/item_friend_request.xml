<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:background="@drawable/bg_holding_info2"
    android:layout_marginBottom="8dp">

    <!-- 프로필 이미지 -->
    <ImageView
        android:id="@+id/iv_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_person"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_profile_circle"
        android:layout_marginEnd="12dp" />

    <!-- 친구 정보 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="친구 이름"
            android:textSize="16sp"
            android:textColor="#333333"
            android:fontFamily="@font/hana2_medium"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_friend_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="010-1234-5678"
            android:textSize="14sp"
            android:textColor="#666666"
            android:fontFamily="@font/hana2_regular"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안녕하세요! 친구가 되고 싶어요."
            android:textSize="12sp"
            android:textColor="#999999"
            android:fontFamily="@font/hana2_regular"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="받은 신청"
            android:textSize="12sp"
            android:textColor="#007AFF"
            android:fontFamily="@font/hana2_medium"
            android:background="@drawable/bg_status_pending"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp" />

    </LinearLayout>

    <!-- 버튼 영역 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 취소 버튼 (보낸 신청일 때) -->
        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/hana2_medium"
            android:background="@drawable/bg_cancel_button"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:visibility="gone" />

        <!-- 수락 버튼 (받은 신청일 때) -->
        <TextView
            android:id="@+id/btn_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수락"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/hana2_medium"
            android:background="@drawable/bg_confirm_dialog_button"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone" />

        <!-- 거절 버튼 (받은 신청일 때) -->
        <TextView
            android:id="@+id/btn_decline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거절"
            android:textSize="14sp"
            android:textColor="#FF4444"
            android:fontFamily="@font/hana2_medium"
            android:background="@drawable/bg_cancel_button"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>
