<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- 상단 헤더 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="16dp"
        android:background="@android:color/white">

        <View
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <!-- 제목 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="선물"
            android:textSize="18sp"
            android:textColor="#333333"
            android:fontFamily="@font/hana2_medium"
            android:gravity="center" />

        <!-- 빈 공간 -->
        <View
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </LinearLayout>

    <!-- 메인 콘텐츠 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:overScrollMode="ifContentScrolls">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="120dp">

            <!-- 친구 선택 섹션 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="친구 선택"
                android:textSize="16sp"
                android:textColor="#333333"
                android:fontFamily="@font/hana2_medium"
                android:layout_marginTop="8dp" />

            <!-- 친구 선택 카드 -->
            <LinearLayout
                android:id="@+id/layout_friend_selector"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_friend_selector"
                android:layout_marginBottom="1dp"
                android:clickable="true"
                android:focusable="true">

                <!-- 프로필 이미지 -->
                <ImageView
                    android:id="@+id/iv_friend_profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_loading"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="12dp" />

                <!-- 친구 정보 또는 선택 안내 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_friend_selector_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="선물받을 친구를 선택해주세요."
                        android:textSize="15sp"
                        android:textColor="#808A96"
                        android:fontFamily="@font/hana2_medium" />

                    <TextView
                        android:id="@+id/tv_selected_friend_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:fontFamily="@font/hana2_medium"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- 드롭다운 화살표 -->
                <ImageView
                    android:id="@+id/iv_dropdown_arrow"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_dropdown_arrow"
                    android:rotation="0" />

            </LinearLayout>

            <!-- 친구 목록 (드롭다운) -->
            <LinearLayout
                android:id="@+id/layout_friends_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_friends_dropdown"
                android:paddingVertical="16dp"
                android:paddingHorizontal="8dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_friends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp" />

                <!-- 친구 추가 버튼 -->
                <LinearLayout
                    android:id="@+id/layout_add_friend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_add_friend"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="친구를 추가하시겠습니까?"
                        android:textSize="14sp"
                        android:textColor="#00B2A6"
                        android:fontFamily="@font/hana2_medium" />

                </LinearLayout>

            </LinearLayout>

            <!-- 친구 검색 (친구 추가 시에만 표시) -->
            <LinearLayout
                android:id="@+id/layout_friend_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_friend_search"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="친구 검색"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/hana2_medium"
                    android:layout_marginBottom="12dp" />

                <EditText
                    android:id="@+id/et_search_friend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:paddingStart="12dp"
                    android:layout_marginBottom="12dp"
                    android:hint="전화번호로 친구 검색"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:fontFamily="@font/hana2_medium"
                    android:background="@drawable/bg_find_phone">

                </EditText>

                <Button
                    android:id="@+id/btn_search_friend"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="친구 검색"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/hana2_medium"
                    android:background="@drawable/bg_primary_button" />

            </LinearLayout>

            <!-- 자산 선택 섹션 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자산 선택"
                android:textSize="16sp"
                android:textColor="#333333"
                android:fontFamily="@font/hana2_medium" />

            <!-- 자산 선택 카드 -->
            <LinearLayout
                android:id="@+id/layout_asset_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_friend_selector"
                android:paddingVertical="16dp"
                android:layout_marginBottom="1dp"
                android:clickable="true"
                android:focusable="true">

                <!-- 자산 이미지 -->
                <ImageView
                    android:id="@+id/iv_selected_asset"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_market_gold"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="12dp" />

                <!-- 자산 정보 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_selected_asset_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GOLD"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:fontFamily="@font/hana2_medium" />

                </LinearLayout>

                <!-- 드롭다운 화살표 -->
                <ImageView
                    android:id="@+id/iv_asset_dropdown_arrow"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_dropdown_arrow"
                    android:rotation="0" />

            </LinearLayout>

            <!-- 자산 목록 (드롭다운) -->
            <LinearLayout
                android:id="@+id/layout_assets_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_friends_dropdown"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_assets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="200dp"
                    android:scrollbars="vertical" />

            </LinearLayout>

            <!-- 양 입력 섹션 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수량 선택"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:fontFamily="@font/hana2_medium" />

                <TextView
                    android:id="@+id/tv_holding_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="보유량: 0.00g"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:fontFamily="@font/hana2_regular" />

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:imeOptions="actionDone" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- 메시지 카드 선택 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메시지 카드"
                android:textSize="16sp"
                android:textColor="#333333"
                android:fontFamily="@font/hana2_medium"
                android:layout_marginBottom="12dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_message_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:scrollbars="horizontal" />

            <!-- 메시지 입력 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메시지 (선택사항)"
                android:textSize="16sp"
                android:textColor="#333333"
                android:fontFamily="@font/hana2_medium"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/et_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="80dp"
                android:padding="12dp"
                android:paddingStart="12dp"
                android:layout_marginBottom="32dp"
                android:hint="전하실 메시지를 입력해주세요!"
                android:textSize="14sp"
                android:textColor="#555555"
                android:fontFamily="@font/hana2_medium"
                android:background="@drawable/bg_edittext"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:imeOptions="actionDone" />

        </LinearLayout>

    </ScrollView>

    <!-- 선물 보내기 버튼 (하단 고정) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:paddingHorizontal="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/btn_send_gift"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="선물 보내기"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/hana2_medium"
            android:background="@drawable/bg_primary_button"
            android:enabled="false" />

    </LinearLayout>

</LinearLayout>
